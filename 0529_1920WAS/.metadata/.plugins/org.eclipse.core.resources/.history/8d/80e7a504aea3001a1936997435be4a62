package com.gunzip.mandooweb;

public class ex {
	// Sales graph chart
		  var salesGraphChartCanvas = $('#line-chart').get(0).getContext('2d');
		  //$('#revenue-chart').get(0).getContext('2d');
		
		  var salesGraphChartData = {
		    labels  : ['-', '-', '-', '-', '-', '-', '50', '-', '-', '-'],
		    datasets: [
		      {
		        label               : 'Digital Goods',
		        fill                : false,
		        borderWidth         : 2,
		        lineTension         : 0,
		        spanGaps : true,
		        borderColor         : '#efefef',
		        pointRadius         : 3,
		        pointHoverRadius    : 7,
		        pointColor          : '#efefef',
		        pointBackgroundColor: '#efefef',
		        data                : [0, 0, 0, 0, 0, 0, 100, 0, 0, 0]
		      }
		    ]
		  }
		
		  var salesGraphChartOptions = {
		    maintainAspectRatio : false,
		    responsive : true,
		    legend: {
		      display: false,
		    },
		    scales: {
		      xAxes: [{
		        ticks : {
		          fontColor: '#efefef',
		        },
		        gridLines : {
		          display : false,
		          color: '#efefef',
		          drawBorder: false,
		        }
		      }],
		      yAxes: [{
		        ticks : {
		        	
		          stepSize: 5,
		          fontColor: '#efefef',
		        },
		        gridLines : {
		          display : true,
		          color: '#efefef',
		          drawBorder: false,
		        }
		      }]
		    }
		  }
		
		  // This will get the first returned node in the jQuery collection.
		  /*  var salesGraphChart = new Chart(salesGraphChartCanvas, { 
		      type: 'line', 
		      data: salesGraphChartData, 
		      options: salesGraphChartOptions
		    }
		  )  */
		  window.onload = function() {
	      	var ctx = document.getElementById('line-chart').getContext('2d');
			window.myLine = new Chart(new Chart(salesGraphChartCanvas, { 
			      type: 'line', 
			      data: salesGraphChartData, 
			      options: salesGraphChartOptions
			    }))
			}; 
}
